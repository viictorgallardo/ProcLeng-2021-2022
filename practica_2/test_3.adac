procedure step (val integer input) is
------------------------------------------------------------
integer temp[255], j, k, t;
begin
    j := 0;
    while (j<255) do
        temp[j] := 0;
        
        j := j+1;
    end

    j := 0;
    while(input > 0) do
        temp[j] := input mod 10;
        input := input div 10;

        j := j+1;
    end
    --Rellenar el resto
    while (j<255) do
        temp[j] := 0;
        
        j := j+1;
    end

    j := 254;
    while (j>=0) do
        if (temp[j] <> 0) then
            t := temp[j];
            k := 1;
            j := j-1;
            if (j>=0) then
                while ((temp[j] = t) and (j>=0)) do
                    k := k+1;
                    j := j-1;
                end
            end
            put(k,t);
        else
            j := j-1;
        end
    end
end

